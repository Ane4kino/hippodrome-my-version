<?xml version="1.0" encoding="UTF-8"?>
    <Configuration status="warn" name="MyApp" packages="">
    <Appends>
        <RollingFile name="RollingFile" fileName="logs/hippodrome.log" filePattern="logs/hippodrome.%d{yyyy-dd-MM}.log.gz">
        <TimeFilter start="00:00:00" end="24:00:00" onMatch="ACCEPT" onMismatch="DENY"/>
        <PatternLayout>
            <pattern>%d %p %c{1.} [%t] %m%n</pattern>
        </PatternLayout>
        <TimeBasedTriggeringPolicy />
        </RollingFile>
        <DefaultRolloverStrategy>
                  <Delete basePath="${baseDir}" testMode="true">
                    <IfFileName glob="*.log" />
                    <IfLastModified age="7d" />
                  </Delete>
        </DefaultRolloverStrategy>
    </Appends>
    <Loggers>
        <Root level="error">
        <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
    </Configuration>